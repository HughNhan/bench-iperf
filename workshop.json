{
    "workshop": {
        "schema": {
            "version": "2020.03.02"
        }
    },
    "userenvs": [
	    {
	        "name": "default",
	        "requirements": [
                "iperf_src",
                "debug"
	        ]
	    }
    ],
    "requirements": [
        {
            "name": "debug",
            "type": "distro",
            "distro_info": {
                "packages": [
                    "ethtool",
                    "net-tools",
                    "tcpdump"
                ]
            }
        },
	    {
	        "name": "iperf_src",
	        "type": "source",
	        "source_info": {
		        "url": "https://github.com/esnet/iperf/archive/3.13.tar.gz",
		        "filename": "3.13.tar.gz",
		        "commands": { 
		            "unpack": "tar -xzf 3.13.tar.gz",
		            "get_dir": "tar -tzf 3.13.tar.gz | head -n 1",
		            "commands": [
			            "CFLAGS=\"-ggdb\" ./configure",
			            "make",
			            "make install",
			            "ldconfig",
			            "/usr/local/bin/iperf3 -v"
		            ]
                }
	        }
        }
    ]
}
